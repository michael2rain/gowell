---
interface Props {
    className?: string;
    text: string;
    type?: "button" | "submit" | "link";
    link?: {
        href: string;
        title: string;
        target?: "_blank" | "_self" | "_parent" | "_top";
    };
    button?: {
        type: "button" | "submit";
    };
}
const { text, type = "link", link, button, className = "" } = Astro.props;
const classList = "btn-primary-e " + className;
---

<style is="global">
    .btn-primary-e {
        @apply font-button uppercase font-medium text-white cursor-pointer bg-gradient-to-r from-neutral-950 to-[#505050] 
        rounded-lg transition-all hover:brightness-110 shadow-2xl shadow-neutral-950;
    }
    .btn-primary-e:active {
        @apply shadow-none;
    }
    .btn-primary-e:disabled {
        @apply bg-gray-300 text-gray-500 cursor-not-allowed;
    }
    .btn-base {
        @apply px-3.5 py-2;
    }
    .btn-primary-e-lg {
        @apply px-12 py-3;
    }
    .btn-primary-e-xl {
        @apply px-12 py-3 md:py-3.5 text-lg md:w-72 text-center;
    }
</style>

{
    type === "link" ? (
        <a
            class={classList + " " + (className.includes("btn-lg") ? "btn-primary-e-lg" : className.includes("btn-xl") ? "btn-primary-e-xl" : "btn-base")}
            href={link?.href}
            target={!link?.target ? "_self" : link.target}
            title={link?.title}
        >
            {text}
        </a>
    ) : (
        <button type={button?.type}>{text}</button>
    )
}
