---
import "@fontsource/archivo/800.css";
import "@fontsource/archivo/900.css";
import PrimaryButton from "../buttons/Primary.astro";

interface Props {
    title: string;
    description: string;
    videoURL: string;
    button: {
        text: string;
        link: string;
    };
}
const { title, description, videoURL, button } = Astro.props;
---

<section
    id="bg"
    class="relative h-[100vh] lg:h-[1080px] -mt-20 md:-mt-32 overflow-hidden"
>
    <video
        class="object-cover min-h-full absolute w-full -z-10 saturate-50"
        autoplay
        muted
        loop
        id="bgVideo"
    >
        <source src={videoURL} type="video/mp4" />
        Su navegador no soporta video HTML5.
    </video>
    <main class="max-w-screen-xl mx-auto h-full z-50">
        <section
            class="h-full flex flex-col justify-center items-center px-3.5 md:px-0"
        >
            <h1
                class="font-heading text-4xl lg:text-6xl xl:text-8xl uppercase text-white text-center mb-6"
            >
                {title}
            </h1>
            <p class="lg:text-xl text-white text-center text-balance mb-10">
                {description}
            </p>
            <PrimaryButton
                className="px-2 lg:btn-xl hover:scale-105 active:scale-100 transition-transform duration-300 ease-in-out"
                text={button.text}
                link={{ href: button.link, title: "" }}
            />
        </section>
    </main>
</section>
